<!doctype html>
<html>
  <head>
    <title>Register for <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Register for <%= shopData.shopName %></h1>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div style="color: red;">
        <ul>
          <% errors.forEach(function(err) { %>
            <li><%= err.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form method="POST" action="registered">
      <p>
        First name:
        <input id="first" type="text" name="first"
               value="<%= (data && data.first) ? data.first : '' %>" />
      </p>

      <p>
        Last name:
        <input id="last" type="text" name="last"
               value="<%= (data && data.last) ? data.last : '' %>" />
      </p>

      <p>
        Email:
        <input id="email" type="email" name="email"
               value="<%= (data && data.email) ? data.email : '' %>" />
      </p>

      <p>
        Username:
        <input id="username" type="text" name="username"
               value="<%= (data && data.username) ? data.username : '' %>" />
      </p>

      <p>
        Password:
        <input id="password" type="password" name="password" />
      </p>

      <input type="submit" value="Register" />
    </form>
  </body