<!doctype html>
<html>
  <head>
    <title>Welcome to <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Welcome to <%= shopData.shopName %></h1>

    <p><a href="/about">About <%= shopData.shopName %></a></p>
    <p><a href="/books/search">Search for books</a></p>

    <% if (!isLoggedIn) { %>
      <p><a href="/users/register">Register with us</a></p>
      <p><a href="/users/login">Login</a></p>
    <% } else { %>
      <p><a href="/users/list">View user list</a></p>
      <p><a href="/books/list">View books</a></p>
      <p><a href="/logout">Logout</a></p>
    <% } %>
  </body>
</html>
